    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Doctr.Diagnostics</PackageId>
        <Authors>Doctr</Authors>
        <Company>Doctr</Company>
        <PackageTags>Trace;Debug;Console;Logging</PackageTags>
